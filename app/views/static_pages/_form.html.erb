<div class="col-lg-6">

  <%= form_for @contact_kevin, class: 'form-horizontal' do |f| %>
    <div class="form-group">
      <%= f.label :first_name %>
      <%= f.text_field :first_name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :last_name %>
      <%= f.text_field :last_name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :company %>
      <%= f.text_field :company, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :email %>
      <%= f.email_field :email, class: "form-control" %>
    </div>
  </div>

  <div class="col-lg-6">
    <div class="form-group ">
      <%= f.label :description %>
      <%= f.text_area :description, class: "form-control" %>
    </div>
    <h3>My Social Sites</h3>
    <ul class="list-inline">
      <li><a href="/" class="btn btn-outline-primary"><i class="fa fa-twitter"> <span class="network-name">Twitter</span></i></a></li>
      <li><a href="/" class="btn btn-outline-secondary"><i class="fa fa-github"> <span class="network-name">GitHub</span></i></a></li>
      <li><a href="/" class="btn btn-outline-primary"><i class="fa fa-linkedin-square"> <span class="network-name">Linkedin</span></i></a></li>
    </ul>
  </div>

  <div class="col-lg-12">
    <%= f.submit "Submit", class: 'btn'%>
  </div>
<% end %>
