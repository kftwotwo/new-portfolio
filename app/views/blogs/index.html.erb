<div id="main">
  <div class="container">
    <div class="row">
      <%= render('shared/sidenav') %>

      <div class="col-lg-9 col-md-9">
        <div class="col-md-12 page-body">

          <div class="sub-title">
            <h2>KevBlogs</h2>
            <div class="search-form">
              <%= form_tag request.path, method: :get, enforce_utf8: false do %>
                <%= text_field_tag :search, params[:search], class: "form-control search-input", placeholder: "Find a blog!" %>
              <% end %>
            </div>
          </div>

          <div class="col-md-12 content-page">
            <div class="col-lg-12 col-md-12 blog-post">
              <div id="blogs">
                <% if @blogs.any? %>
                  <%= render @blogs %>
                <% else %>
                  <h2 style="text-align: center;">Sorry, I have not blogged about <%= params[:search] %> yet.</h2>
                <% end %>
              </div>
            </div>
          </div>

          <div id="infinite-scrolling">
            <%= will_paginate(@blogs, digest: false) %>
          </div>

        </div>
        <%= render('shared/blogfooter') %>
      </div>
    </div>
  </div>
</div>


