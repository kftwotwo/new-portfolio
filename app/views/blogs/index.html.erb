<div id="main">
  <div class="container">
    <div class="row">
      <%= render('blogs/sidenav') %>

      <div class="col-lg-9 col-md-9">
        <div class="col-md-12 page-body">

          <div class="sub-title">
            <h2>KevBlogs</h2>
          </div>

          <div class="col-md-12 content-page">
            <div class="col-lg-12 col-md-12 blog-post">
              <% @blogs.each do |blog| %>
                <div class="post-title">
                  <h1><%= link_to "#{blog.title}",  blog_path(blog.id) %></h1>
                </div>
                <div class="post-info">
                  <span><%= blog.created_at.strftime("%B %d, %Y") %></span>
                </div>
                <%= truncate(blog.body, length: 350) %>
                <%= link_to "Read More",  blog_path(blog.id), class: 'button button-style button-anim fa fa-long-arrow-right'%>
              <% end %>
            </div>

          </div>

          <%# TODO create pagination here%>
          <p>load more or paginate here</p>
        </div>
        <%= render('blogs/blogfooter') %>
      </div>
    </div>
  </div>
</div>


